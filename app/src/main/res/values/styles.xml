<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>

    <!--默认样式-->
    <style name="top">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:padding">8dp</item>
        <item name="android:background">@drawable/common_top_bkg</item>
    </style>

    <style name="top_title">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:padding">5dp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textColor">@color/default_font</item>
    </style>

    <style name="footer_button">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:padding">5dp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textColor">@color/default_font</item>
    </style>

    <style name="form_input">
        <item name="android:background">@drawable/login_form_text_bkg</item>
        <item name="android:textSize">18sp</item>
        <item name="android:padding">10dp</item>
    </style>

    <style name="default_button">
        <item name="android:background">@drawable/default_btn</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/default_ftg</item>
        <item name="android:textStyle">bold</item>
    </style>
    <!--SlidingMenu-->
    <style name="slidingmenu">
        <item name="android:paddingStart">@dimen/sliding_padding</item>
        <item name="android:paddingEnd">@dimen/sliding_padding</item>
        <item name="android:paddingTop">@dimen/sliding_paddingTop</item>
        <item name="android:paddingBottom">@dimen/sliding_paddingBottom</item>
        <item name="android:background">@drawable/common_sliding_bkg</item>
    </style>

    <style name="sliding_avatar"></style>

    <style name="sliding_username">
        <item name="android:textColor">@color/default_ftg</item>
        <item name="android:textSize">@dimen/sliding_username_fontSize</item>
    </style>

    <style name="sliding_otherinfo">
        <item name="android:textColor">@color/default_ftg</item>
        <item name="android:textSize">@dimen/sliding_otherinfo_fontSize</item>
    </style>

    <style name="sliding_list">

    </style>
    <!--登陆界面样式-->
    <style name="login_container">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">vertical</item>
        <item name="android:padding">30dp</item>
        <item name="android:paddingTop">0dp</item>
        <item name="android:background">@drawable/login_bkg</item>
    </style>


    <style name="login_logo">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:padding">10dp</item>
        <item name="android:layout_weight">4</item>
        <item name="android:src">@drawable/logo_large</item>
        <item name="android:scaleType">centerInside</item>
    </style>

    <style name="login_form">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:padding">5dp</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:layout_weight">5</item>
        <item name="android:background">@drawable/login_form_text_bkg</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="login_opr_container">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">5</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="login_opr">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">5dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/default_font</item>
    </style>

    <style name="login_submit">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">5</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/login_submit_bkg</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/default_font</item>
    </style>

    <style name="login_app_tip">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:layout_weight">5</item>
    </style>

    <style name="login_tip_line">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">2px</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@color/login_divide</item>

    </style>

    <style name="login_tip_text">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textColor">@color/login_tip</item>
        <item name="android:textSize">12sp</item>
        <item name="android:text">@string/login_divide_tip</item>
    </style>

    <style name="app_list">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:layout_weight">5</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="app_icon">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:scaleType">centerInside</item>
    </style>
</resources>
